{% extends 'base.html.twig' %}

{% block title %}{{parent()}}-Article index{% endblock %}

{% block body %}
   <a class="btn btn-primary" href="{{ path('article_new') }}" style="margin-bottom:15px">Ajouter nouveau article</a>
   <div class="card">
              <div class="card-header">
                <h3 class="card-title">Liste des Articles</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prix</th>
                <th>Quantity</th>
                <th>Photo</th>
                <th>Provider</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.prix }}</td>
                <td>{{ article.quantity }}</td>
                <td><img src="{{asset('uploads/articles/'~ article.photo)}}" width="50px"></td>
                <td>{{ article.provider.name }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-danger" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
{% endblock %}
