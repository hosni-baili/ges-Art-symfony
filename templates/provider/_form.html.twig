
            <div class="card card-primary">
              <div class="card-header">
                <h2 class="card-title">Create new Provider</h2>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
{{ form_start(form) }}
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    {{ form_widget(form.name,{'attr': {'class': 'form-control','placeholder': 'Provider Name','id': 'providername'}}) }}
                  </div>
                  <div class="form-group">
                    <label for="provideremail">Email</label>
                    {{ form_widget(form.email,{'attr': {'class': 'form-control','placeholder': 'Provider email','id': 'provideremail'}}) }}
                  </div>
                  <div class="form-group">
                    <label for="provideradress">Adresse</label>
                     {{ form_widget(form.adress,{'attr': {'class': 'form-control','placeholder': 'Provider Adress','id': 'provideradress'}}) }}
                  </div>

                   <div class="form-group">
                    <label for="providerInputFile">Photo</label>
                    <div class="input-group">
                      <div class="custom-file">
                         {{ form_widget(form.photo,{'attr': {'class': 'custom-file-input','type': 'file','id': 'providerInputFile'}}) }}
                        <label class="custom-file-label" for="exampleInputFile">Choose photo</label>
                      </div>
                     
                    </div>
                  </div> 
                
                <!-- /.card-body -->

                <div class="card-footer">
    <button class="btn btn-success">{{ button_label|default('Aouter') }}</button>
        <a class="btn btn-info" href="{{ path('provider_index') }}">back to list</a>

                </div>
{{ form_end(form) }}
            </div>